@model IEnumerable<Firmeza.Core.Entities.Rental>

@{
    ViewData["Title"] = "Rentals";
    var now = DateTime.UtcNow;
}

<h2>Rentals</h2>

<div class="alert alert-info">
    <strong>Current Server Time (UTC):</strong> @now.ToString("yyyy-MM-dd HH:mm:ss")
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Vehicle</th>
            <th>Start Date (UTC)</th>
            <th>End Date (UTC)</th>
            <th>Is Active?</th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        var isActive = (item.StartDate <= now && item.EndDate >= now);
        <tr class="@(isActive ? "table-success" : "")">
            <td>@Html.DisplayFor(modelItem => item.Customer.FullName)</td>
            <td>@Html.DisplayFor(modelItem => item.Vehicle.Name)</td>
            <td>@item.StartDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
            <td>@item.EndDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
            <td>
                @if (isActive)
                {
                    <span class="badge bg-success">Yes</span>
                }
                else
                {
                    <span class="badge bg-secondary">No</span>
                }
            </td>
            <td>@item.TotalAmount.ToString("C0")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> | <!-- Added Details link -->
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
