@model Firmeza.Core.Entities.Rental

@{
    ViewData["Title"] = "Rental Details";
}

<h2>Rental Details</h2>

<div>
    <h4>Contract ID: @Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Customer
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.FullName
        </dd>
        <dt class="col-sm-2">
            Vehicle
        </dt>
        <dd class="col-sm-10">
            @Model.Vehicle.Name
        </dd>
        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Model.StartDate.ToString("g")
        </dd>
        <dt class="col-sm-2">
            End Date
        </dt>
        <dd class="col-sm-10">
            @Model.EndDate.ToString("g")
        </dd>
        <dt class="col-sm-2">
            Total Amount
        </dt>
        <dd class="col-sm-10">
            @Model.TotalAmount.ToString("C0")
        </dd>
    </dl>
</div>

<div class="mt-4">
    <a asp-action="GenerateContract" asp-route-id="@Model.Id" class="btn btn-primary">Generate PDF Contract</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
