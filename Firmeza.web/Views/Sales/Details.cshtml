@model Firmeza.Core.Entities.Sale

@{
    ViewData["Title"] = "Sale Details";
}

<h2>Sale Details</h2>

<div>
    <h4>Invoice ID: @Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.SaleDate.ToString("g")
        </dd>
        <dt class="col-sm-2">
            Customer
        </dt>
        <dd class="col-sm-10">
            @Model.Customer.FullName
        </dd>
        <dt class="col-sm-2">
            Total Amount
        </dt>
        <dd class="col-sm-10">
            @Model.TotalAmount.ToString("C")
        </dd>
    </dl>
</div>

<h4 class="mt-4">Sale Items</h4>
<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Unit Price</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SaleDetails)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice.ToString("C")</td>
                <td>@item.TotalPrice.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-4">
    <a asp-action="GenerateInvoice" asp-route-id="@Model.Id" class="btn btn-primary">Generate PDF Invoice</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
