@model Firmeza.web.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}

<div class="card login-card">
    <div class="card-header bg-transparent border-0 text-center">
        <h3 class="my-2">Admin Login</h3>
    </div>
    <div class="card-body">
        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Email">Email</label>
            </div>
            <div class="form-floating mb-4">
                <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Password">Password</label>
            </div>
            <div class="d-grid">
                <button id="login-submit" type="submit" class="btn btn-primary btn-lg">Log in</button>
            </div>
        </form>
    </div>
    <div class="card-footer bg-transparent border-0 text-center">
        <a asp-action="Register">Don't have an account? Register</a>
    </div>
</div>
